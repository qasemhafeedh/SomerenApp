﻿<!-- Index.cshtml -->
@model IEnumerable<SomerenApp.Models.Student>

<h2>Students List</h2>

<!-- Search Form -->
<form method="get">
    <input type="text" name="lastNameFilter" value="@Context.Request.Query["lastNameFilter"]" placeholder="Search by Last Name" class="form-control" style="width: 300px; display: inline-block;" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Student</a>
</p>

<!-- Display Error Messages -->
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Student Number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Class</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentID</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.PhoneNumber</td>
                <td>@student.Class</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.StudentID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


