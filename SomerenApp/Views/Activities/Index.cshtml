﻿<!-- Index.cshtml -->
@model IEnumerable<SomerenApp.Models.Activity>

<h2>Activities List</h2>
<form method="get">
    <input type="text" name="nameFilter" value="@Context.Request.Query["nameFilter"]"
           placeholder="Search by Activity Name" class="form-control" style="width: 300px; display: inline-block;" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<!-- Add Activity Button -->
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Activity</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Activity Name</th>
            <th>Date & Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.ActivityName</td>
                <td>@activity.ActivityDateTime</td>
                <td>
                    <!-- Edit Button -->
                    <a asp-action="Edit" asp-route-id="@activity.ActivityID" class="btn btn-warning">Edit</a>

                    <!-- Delete Button -->
                    <a asp-action="Delete" asp-route-id="@activity.ActivityID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
