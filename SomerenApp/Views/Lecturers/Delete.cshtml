@model SomerenApp.Models.Lecturer

<h2>Are you sure you want to delete this lecturer?</h2>

<h3>@Model.FirstName @Model.LastName</h3>
<p>Phone: @Model.PhoneNumber</p>
<p>Age: @Model.Age</p>

<form asp-controller="Lecturers" asp-action="Delete" method="post">
    <input type="hidden" asp-for="LecturerID" />

    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

