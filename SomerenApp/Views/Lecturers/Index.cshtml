<!-- Index.cshtml -->
@model IEnumerable<SomerenApp.Models.Lecturer>

<h2>Lecturers List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Lecturer</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.FirstName</td>
                <td>@lecturer.LastName</td>
                <td>@lecturer.PhoneNumber</td>
                <td>@lecturer.Age</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@lecturer.LecturerID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@lecturer.LecturerID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
